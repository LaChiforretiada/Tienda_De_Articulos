<h1 class="">Bienvenido a SwapRecharged</h1>
@if (ViewBag.mensaje != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.mensaje
    </div>
}
<form method="post" class="">
<hr/>
<h2 class="mt-3 mb-3">Ingrese sus datos</h2>
    <input type="email" name="mail" placeholder="Ingrese mail" />
    <input type="text" name="contra" placeholder="Ingrese contraseña" />
    <button type="submit">Ingresar</button>
</form>
<a asp-controller="Usuario" asp-action="IrARegistro" class="btn btn-dark p-1 mt-2">Registrarse</a>