<a asp-controller="Usuario" asp-action="IrARegistro" class="btn btn-dark p-1 mt-2">Registrarse</a>
<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Apellido</th>
			<th scope="col">Nombre</th>
			<th scope="col">Mail</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Usuario item in ViewBag.Usuarios)
		{
			<tr>
				<td>@item.Apellido</td>
				<td>@item.Nombre</td>
				<td>@item.Mail</td>
			</tr>
		}
	</tbody>
</table>


