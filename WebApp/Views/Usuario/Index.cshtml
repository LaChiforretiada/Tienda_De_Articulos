<h1>Ingreso al sistema</h1>

<div class="mt-5">

	<form action="/sistema/IngresoAlSistema">
		<input type="text" name="mail" placeholder="Ingrese mail" />
		<input type="text" name="nombre" placeholder="Ingrese contraseña" />
		<button type="submit" name="action" value="ingresar" class="btn-dark">Ingresar</button>
	</form>
</div>

@* <form asp-controller="" asp-action="IrARegistro" method="get">
